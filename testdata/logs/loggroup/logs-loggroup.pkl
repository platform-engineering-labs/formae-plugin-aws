amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/logs/loggroup.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-logs-loggroup-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for CloudWatch Logs LogGroup"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new loggroup.LogGroup {
    label = "plugin-sdk-test-loggroup"
    logGroupName = "/formae/plugin-sdk-test/\(testRunID)"
  }
}
