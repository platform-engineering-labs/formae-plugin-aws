amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/elasticbeanstalk/application.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-eb-application-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for ElasticBeanstalk Application"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new application.Application {
    label = "plugin-sdk-test-eb-app"
    applicationName = "formae-sdk-test-app-\(testRunID)"
    description = "Formae SDK test application"
  }
}
