amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/vpngateway.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-vpngateway-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 VPNGateway"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new vpngateway.VPNGateway {
    label = "plugin-sdk-test-vgw"
    type = "ipsec.1"
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-vgw-\(testRunID)" }
    }
  }
}
