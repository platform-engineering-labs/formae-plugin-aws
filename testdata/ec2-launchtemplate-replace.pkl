amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/launchtemplate.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-launchtemplate-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 LaunchTemplate"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Changed launchTemplateName (createOnly) - triggers replace
  new launchtemplate.LaunchTemplate {
    label = "plugin-sdk-test-launchtemplate"
    launchTemplateName = "formae-plugin-sdk-test-lt-replaced-\(testRunID)"
    launchTemplateData = new launchtemplate.LaunchTemplateData {
      instanceType = "t3.small"
    }
    versionDescription = "Replaced version"
  }
}
