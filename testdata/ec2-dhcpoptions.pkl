amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/dhcpoptions.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-dhcpoptions-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 DHCPOptions"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new dhcpoptions.DHCPOptions {
    label = "plugin-sdk-test-dhcpoptions"
    domainName = "sdk-test.internal"
    domainNameServers {
      "AmazonProvidedDNS"
    }
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-dhcp-\(testRunID)" }
    }
  }
}
