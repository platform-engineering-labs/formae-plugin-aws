amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/rds/dbclusterparametergroup.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-rds-dbclusterpg-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for RDS DBClusterParameterGroup"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Updated: changed parameter value and added tag
  new dbclusterparametergroup.DBClusterParameterGroup {
    label = "plugin-sdk-test-dbcpg"
    dbClusterParameterGroupName = "formae-sdk-test-dbcpg-\(testRunID)"
    family = "aurora-mysql8.0"
    description = "Formae SDK test DB cluster parameter group"
    parameters {
      ["character_set_server"] = "utf8"
    }
    tags {
      new { key = "Name"; value = "formae-sdk-test-dbcpg-\(testRunID)" }
      new { key = "Environment"; value = "updated" }
    }
  }
}
