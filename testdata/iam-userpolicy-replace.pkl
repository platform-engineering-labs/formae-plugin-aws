amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/user.pkl"
import "@aws/iam/userpolicy.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-userpolicy-\(testRunID)"

// User dependency - same as create
local parentUser = new user.User {
  label = "test-user-for-userpolicy"
  userName = "formae-plugin-sdk-test-up-user-\(testRunID)"
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM UserPolicy"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Parent User
  parentUser

  // UserPolicy with changed policyName (createOnly) - triggers replace
  new userpolicy.UserPolicy {
    label = "plugin-sdk-test-userpolicy"
    userName = "formae-plugin-sdk-test-up-user-\(testRunID)"
    policyName = "formae-plugin-sdk-test-userpolicy-replaced-\(testRunID)"
    policyDocument {
      ["Version"] = "2012-10-17"
      ["Statement"] {
        new {
          ["Effect"] = "Allow"
          ["Action"] = "logs:DescribeLogGroups"
          ["Resource"] = "*"
        }
        new {
          ["Effect"] = "Allow"
          ["Action"] = "logs:DescribeLogStreams"
          ["Resource"] = "*"
        }
      }
    }
  }
}
