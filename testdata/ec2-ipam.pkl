amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/ipam.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-ipam-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 IPAM"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new ipam.IPAM {
    label = "plugin-sdk-test-ipam"
    description = "Formae SDK test IPAM"
    tier = "free"
    operatingRegions {
      new {
        regionName = "us-east-1"
      }
    }
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-ipam-\(testRunID)" }
    }
  }
}
