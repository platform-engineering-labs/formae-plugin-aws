amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/secretsmanager/secret.pkl"
import "@aws/secretsmanager/resourcepolicy.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-secretsmanager-resourcepolicy-\(testRunID)"

// Secret dependency - same as create
local testSecret = new secret.Secret {
  label = "test-secret"
  name = "formae-plugin-sdk-test-rp-\(testRunID)"
  description = "SDK test secret for ResourcePolicy"
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for SecretsManager ResourcePolicy"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Secret required for ResourcePolicy
  testSecret

  // ResourcePolicy with updated policy - added DescribeSecret action
  new resourcepolicy.ResourcePolicy {
    label = "plugin-sdk-test-resourcepolicy"
    secretId = testSecret.res.name
    blockPublicPolicy = true
    resourcePolicy {
      ["Version"] = "2012-10-17"
      ["Statement"] {
        new {
          ["Effect"] = "Allow"
          ["Principal"] {
            ["AWS"] = "*"
          }
          ["Action"] {
            "secretsmanager:GetSecretValue"
            "secretsmanager:DescribeSecret"
          }
          ["Resource"] = "*"
        }
      }
    }
  }
}
