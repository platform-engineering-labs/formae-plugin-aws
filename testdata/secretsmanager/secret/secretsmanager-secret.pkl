amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/secretsmanager/secret.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-secretsmanager-secret-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Secrets Manager Secret"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new secret.Secret {
    label = "plugin-sdk-test-secret"
    name = "formae-plugin-sdk-test-secret-\(testRunID)"
    description = "Formae plugin SDK test secret"
  }
}
