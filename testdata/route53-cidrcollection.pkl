amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/route53/cidrcollection.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-route53-cidrcollection-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Route53 CidrCollection"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new cidrcollection.CidrCollection {
    label = "plugin-sdk-test-cidrcollection"
    name = "sdk-test-cidr-\(testRunID)"
    locations {
      new {
        locationName = "us-east"
        cidrList {
          "10.0.0.0/16"
        }
      }
    }
  }
}
