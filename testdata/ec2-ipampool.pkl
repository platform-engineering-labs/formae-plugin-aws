amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/ipam.pkl"
import "@aws/ec2/ipampool.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-ipampool-\(testRunID)"

// IPAM dependency - IPAMPool needs an IPAM scope
local testIpam = new ipam.IPAM {
  label = "test-ipam-for-pool"
  description = "Formae SDK test IPAM for pool"
  tier = "free"
  operatingRegions {
    new {
      regionName = "us-east-1"
    }
  }
  tags {
    new { key = "Name"; value = "formae-plugin-sdk-test-ipampool-ipam-\(testRunID)" }
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 IPAMPool"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // IPAM required for IPAMPool
  testIpam

  // IPAMPool under test - references IPAM's private default scope
  new ipampool.IPAMPool {
    label = "plugin-sdk-test-ipampool"
    ipamScopeId = new formae.Resolvable {
      label = testIpam.label
      type = "AWS::EC2::IPAM"
      property = "PrivateDefaultScopeId"
    }
    addressFamily = "ipv4"
    description = "Formae SDK test IPAM pool"
  }
}
