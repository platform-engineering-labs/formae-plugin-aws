amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/keypair.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-keypair-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 KeyPair"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Changed keyName (createOnly) - triggers replace
  new keypair.KeyPair {
    label = "plugin-sdk-test-keypair"
    keyName = "formae-plugin-sdk-test-keypair-replaced-\(testRunID)"
    keyType = "ed25519"
  }
}
