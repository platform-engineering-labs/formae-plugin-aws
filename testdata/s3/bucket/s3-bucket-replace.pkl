amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/s3/bucket.pkl"

// Read the test run ID from environment variable set by the test harness
// This ensures consistent naming within a test run but unique names between runs
local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-s3-bucket-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for S3 Bucket"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new bucket.Bucket {
    label = "plugin-sdk-test-bucket"
    bucketName = "formae-plugin-sdk-test-replaced-\(testRunID)"
  }
}
