amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/policy.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-policy-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM Policy"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Policy with updated policyDocument (added second action)
  new policy.Policy {
    label = "plugin-sdk-test-policy"
    policyName = "formae-plugin-sdk-test-policy-\(testRunID)"
    policyDocument {
      ["Version"] = "2012-10-17"
      ["Statement"] {
        new {
          ["Effect"] = "Allow"
          ["Action"] = "logs:DescribeLogGroups"
          ["Resource"] = "*"
        }
        new {
          ["Effect"] = "Allow"
          ["Action"] = "logs:DescribeLogStreams"
          ["Resource"] = "*"
        }
      }
    }
  }
}
