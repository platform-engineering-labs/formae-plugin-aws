amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/efs/filesystem.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-efs-filesystem-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EFS FileSystem"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Updated: added lifecycle policy and extra tag
  new filesystem.FileSystem {
    label = "plugin-sdk-test-filesystem"
    encrypted = true
    performanceMode = "generalPurpose"
    throughputMode = "bursting"
    lifecyclePolicies {
      new {
        transitionToIA = "AFTER_30_DAYS"
      }
    }
    fileSystemTags {
      new { key = "Name"; value = "formae-plugin-sdk-test-efs-updated-\(testRunID)" }
    }
  }
}
