amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/role.pkl"
import "@aws/iam/rolepolicy.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-rolepolicy-\(testRunID)"

// Role dependency - RolePolicy needs a role to attach to
local parentRole = new role.Role {
  label = "test-role-for-rolepolicy"
  roleName = "formae-plugin-sdk-test-rp-role-\(testRunID)"
  assumeRolePolicyDocument {
    ["Version"] = "2012-10-17"
    ["Statement"] {
      new {
        ["Effect"] = "Allow"
        ["Principal"] {
          ["Service"] = "lambda.amazonaws.com"
        }
        ["Action"] = "sts:AssumeRole"
      }
    }
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM RolePolicy"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Parent Role
  parentRole

  // RolePolicy under test
  new rolepolicy.RolePolicy {
    label = "plugin-sdk-test-rolepolicy"
    roleName = parentRole.res.roleName
    policyName = "formae-plugin-sdk-test-rolepolicy-\(testRunID)"
    policyDocument {
      ["Version"] = "2012-10-17"
      ["Statement"] {
        new {
          ["Effect"] = "Allow"
          ["Action"] = "logs:DescribeLogGroups"
          ["Resource"] = "*"
        }
      }
    }
  }
}
