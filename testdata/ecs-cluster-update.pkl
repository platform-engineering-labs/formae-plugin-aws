amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ecs/ecscluster.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ecs-cluster-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for ECS Cluster"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Updated: enabled container insights and added tag
  new ecscluster.Cluster {
    label = "plugin-sdk-test-cluster"
    clusterName = "formae-plugin-sdk-test-cluster-\(testRunID)"
    clusterSettings {
      new {
        name = "containerInsights"
        value = "enabled"
      }
    }
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-cluster-\(testRunID)" }
      new { key = "Environment"; value = "updated" }
    }
  }
}
