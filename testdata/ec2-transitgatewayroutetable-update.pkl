amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/transitgateway.pkl"
import "@aws/ec2/transitgatewayroutetable.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-transitgatewayroutetable-\(testRunID)"

// TransitGateway dependency - same as create
local testTgw = new transitgateway.TransitGateway {
  label = "test-tgw-for-routetable"
  description = "Formae SDK test transit gateway for route table"
  dnsSupport = "enable"
  vpnEcmpSupport = "enable"
  tags {
    new { key = "Name"; value = "formae-plugin-sdk-test-tgwrt-tgw-\(testRunID)" }
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 TransitGatewayRouteTable"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // TransitGateway required for RouteTable
  testTgw

  // Updated: added extra tag
  new transitgatewayroutetable.TransitGatewayRouteTable {
    label = "plugin-sdk-test-tgw-routetable"
    transitGatewayId = new formae.Resolvable {
      label = testTgw.label
      type = "AWS::EC2::TransitGateway"
      property = "Id"
    }
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-tgwrt-\(testRunID)" }
      new { key = "Environment"; value = "updated" }
    }
  }
}
