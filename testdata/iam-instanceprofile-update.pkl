amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/role.pkl"
import "@aws/iam/instanceprofile.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-instanceprofile-\(testRunID)"

// Original role - kept in stack but no longer referenced by InstanceProfile
local role1 = new role.Role {
  label = "test-role-for-instanceprofile"
  roleName = "formae-plugin-sdk-test-ip-role-\(testRunID)"
  assumeRolePolicyDocument {
    ["Version"] = "2012-10-17"
    ["Statement"] {
      new {
        ["Effect"] = "Allow"
        ["Principal"] {
          ["Service"] = "ec2.amazonaws.com"
        }
        ["Action"] = "sts:AssumeRole"
      }
    }
  }
}

// Second role - InstanceProfile swaps to this one
local role2 = new role.Role {
  label = "test-role-for-instanceprofile-2"
  roleName = "formae-plugin-sdk-test-ip-role2-\(testRunID)"
  assumeRolePolicyDocument {
    ["Version"] = "2012-10-17"
    ["Statement"] {
      new {
        ["Effect"] = "Allow"
        ["Principal"] {
          ["Service"] = "ec2.amazonaws.com"
        }
        ["Action"] = "sts:AssumeRole"
      }
    }
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM InstanceProfile"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Both roles in the stack
  role1
  role2

  // InstanceProfile with updated roles (swapped to role2)
  new instanceprofile.InstanceProfile {
    label = "plugin-sdk-test-instanceprofile"
    instanceProfileName = "formae-plugin-sdk-test-ip-\(testRunID)"
    path = "/"
    roles = new Listing {
      role2.res.roleName
    }
  }
}
