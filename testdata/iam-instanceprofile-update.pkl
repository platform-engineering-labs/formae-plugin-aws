amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/instanceprofile.pkl"
import "@aws/iam/role.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-instanceprofile-\(testRunID)"

// Same role dependency as create
local iamRole = new role.Role {
  label = "test-role-for-instanceprofile"
  roleName = "formae-plugin-sdk-test-ip-role-\(testRunID)"
  assumeRolePolicyDocument {
    ["Version"] = "2012-10-17"
    ["Statement"] {
      new {
        ["Effect"] = "Allow"
        ["Principal"] {
          ["Service"] = "ec2.amazonaws.com"
        }
        ["Action"] = "sts:AssumeRole"
      }
    }
  }
}

// Second role for the update - swap to a different role
local iamRole2 = new role.Role {
  label = "test-role2-for-instanceprofile"
  roleName = "formae-plugin-sdk-test-ip-role2-\(testRunID)"
  assumeRolePolicyDocument {
    ["Version"] = "2012-10-17"
    ["Statement"] {
      new {
        ["Effect"] = "Allow"
        ["Principal"] {
          ["Service"] = "ec2.amazonaws.com"
        }
        ["Action"] = "sts:AssumeRole"
      }
    }
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM InstanceProfile"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Both roles
  iamRole
  iamRole2

  // Updated: swap to second role
  new instanceprofile.InstanceProfile {
    label = "plugin-sdk-test-instanceprofile"
    instanceProfileName = "formae-plugin-sdk-test-ip-\(testRunID)"
    roles {
      iamRole2.res.id
    }
  }
}
