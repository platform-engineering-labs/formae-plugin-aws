amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ecr/repositorycreationtemplate.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ecr-repositorycreationtemplate-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for ECR RepositoryCreationTemplate"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Changed prefix (createOnly) - triggers replace
  new repositorycreationtemplate.RepositoryCreationTemplate {
    label = "plugin-sdk-test-rct"
    prefix = "formae-sdk-test-replaced-\(testRunID)"
    appliedFor {
      "REPLICATION"
    }
    description = "Formae SDK test repository creation template - updated"
    imageTagMutability = "IMMUTABLE"
  }
}
