amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/sqs/queue.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-sqs-queue-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for SQS Queue"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new queue.Queue {
    label = "plugin-sdk-test-queue"
    queueName = "formae-plugin-sdk-test-queue-\(testRunID)"
  }
}
