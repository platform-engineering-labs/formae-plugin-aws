amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/user.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-user-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM User"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new user.User {
    label = "plugin-sdk-test-user"
    userName = "formae-plugin-sdk-test-user-replaced-\(testRunID)"
  }
}
