amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/route53/healthcheck.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-route53-healthcheck-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Route53 HealthCheck"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Updated: changed failure threshold and resource path
  new healthcheck.HealthCheck {
    label = "plugin-sdk-test-healthcheck"
    healthCheckConfig {
      ["Type"] = "HTTPS"
      ["FullyQualifiedDomainName"] = "example.com"
      ["Port"] = 443
      ["ResourcePath"] = "/healthz"
      ["RequestInterval"] = 30
      ["FailureThreshold"] = 5
      ["EnableSNI"] = true
      ["Inverted"] = false
      ["MeasureLatency"] = false
    }
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-hc-\(testRunID)" }
      new { key = "Environment"; value = "updated" }
    }
  }
}
