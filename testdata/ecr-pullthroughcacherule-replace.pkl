amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ecr/pullthroughcacherule.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ecr-pullthroughcacherule-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for ECR PullThroughCacheRule"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Changed ecrRepositoryPrefix (createOnly) - triggers replace
  new pullthroughcacherule.PullThroughCacheRule {
    label = "plugin-sdk-test-ptcr"
    ecrRepositoryPrefix = "fmae-sdk-r-\(testRunID)"
    upstreamRegistryUrl = "public.ecr.aws"
  }
}
