amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/route53/hostedzone.pkl"
import "@aws/route53/recordset.pkl"

// Read the test run ID from environment variable set by the test harness
// This ensures consistent naming within a test run but unique names between runs
local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-route53-recordset-\(testRunID)"
local domainName = "sdk-\(testRunID).test-formae.io"

// HostedZone dependency - same as create
local hz = new hostedzone.HostedZone {
  label = "test-hosted-zone"
  name = domainName
  hostedZoneConfig = new hostedzone.HostedZoneConfig {
    comment = "SDK test hosted zone for RecordSet tests"
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Route53 RecordSet"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // HostedZone required for RecordSet
  hz

  // RecordSet with changed name (createOnly field) - triggers replace
  new recordset.RecordSet {
    label = "plugin-sdk-test-recordset"
    hostedZoneId = hz.res.id
    name = "api.\(domainName)"
    type = "A"
    ttl = 600
    resourceRecords = new Listing {
      "192.0.2.1"
      "192.0.2.2"
    }
  }
}
