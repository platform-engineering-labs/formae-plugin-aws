amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/role.pkl"
import "@aws/ec2/vpc.pkl"
import "@aws/ec2/flowlog.pkl"
import "@aws/logs/loggroup.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-flowlog-\(testRunID)"
local logGroupNameValue = "/formae/plugin-sdk-test/flowlog/\(testRunID)"

// IAM Role for VPC Flow Logs - same as create
local flowLogRole = new role.Role {
  label = "flowlog-role"
  roleName = "formae-sdk-test-fl-role-\(testRunID)"
  assumeRolePolicyDocument {
    ["Version"] = "2012-10-17"
    ["Statement"] {
      new {
        ["Effect"] = "Allow"
        ["Principal"] {
          ["Service"] = "vpc-flow-logs.amazonaws.com"
        }
        ["Action"] = "sts:AssumeRole"
      }
    }
  }
  policies {
    new {
      policyName = "flowlog-cloudwatch"
      policyDocument {
        ["Version"] = "2012-10-17"
        ["Statement"] {
          new {
            ["Effect"] = "Allow"
            ["Action"] {
              "logs:CreateLogGroup"
              "logs:CreateLogStream"
              "logs:PutLogEvents"
              "logs:DescribeLogGroups"
              "logs:DescribeLogStreams"
            }
            ["Resource"] = "*"
          }
        }
      }
    }
  }
}

// VPC dependency - same as create
local testVpc = new vpc.VPC {
  label = "test-vpc-for-flowlog"
  cidrBlock = "10.210.0.0/16"
  enableDnsSupport = true
}

// LogGroup dependency - same as create
local testLogGroup = new loggroup.LogGroup {
  label = "test-loggroup-for-flowlog"
  logGroupName = logGroupNameValue
  retentionInDays = 1
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 FlowLog"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // IAM Role for FlowLog delivery
  flowLogRole

  // VPC required for FlowLog
  testVpc

  // LogGroup required for FlowLog destination
  testLogGroup

  // Updated: added tags (tags is the only updatable field on FlowLog)
  new flowlog.FlowLog {
    label = "plugin-sdk-test-flowlog"
    resourceId = testVpc.res.vpcId
    resourceType = "VPC"
    trafficType = "ALL"
    logDestinationType = "cloud-watch-logs"
    logGroupName = logGroupNameValue
    deliverLogsPermissionArn = flowLogRole.res.arn
    tags {
      new { key = "Environment"; value = "updated" }
    }
  }
}
