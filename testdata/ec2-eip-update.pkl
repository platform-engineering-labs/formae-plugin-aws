amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/eip.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-eip-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 EIP"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new eip.EIP {
    label = "plugin-sdk-test-eip"
    domain = "vpc"
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-eip-\(testRunID)" }
      new { key = "Environment"; value = "updated" }
    }
  }
}
