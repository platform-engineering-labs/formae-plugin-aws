amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/user.pkl"
import "@aws/iam/accesskey.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-accesskey-\(testRunID)"

// User dependency - AccessKey needs a user to attach to
local parentUser = new user.User {
  label = "test-user-for-accesskey"
  userName = "formae-plugin-sdk-test-ak-user-\(testRunID)"
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM AccessKey"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Parent User
  parentUser

  // AccessKey under test
  new accesskey.AccessKey {
    label = "plugin-sdk-test-accesskey"
    userName = "formae-plugin-sdk-test-ak-user-\(testRunID)"
    status = "Active"
  }
}
