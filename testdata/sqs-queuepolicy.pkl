amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/sqs/queue.pkl"
import "@aws/sqs/queuepolicy.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-sqs-queuepolicy-\(testRunID)"

// Queue dependency - QueuePolicy needs a queue to attach to
local testQueue = new queue.Queue {
  label = "test-queue"
  queueName = "formae-plugin-sdk-test-qp-\(testRunID)"
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for SQS QueuePolicy"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Queue required for QueuePolicy
  testQueue

  // QueuePolicy under test
  new queuepolicy.QueuePolicy {
    label = "plugin-sdk-test-queuepolicy"
    queues = new Listing {
      testQueue.res.queueUrl
    }
    policyDocument {
      ["Version"] = "2012-10-17"
      ["Statement"] {
        new {
          ["Effect"] = "Allow"
          ["Principal"] = "*"
          ["Action"] = "sqs:SendMessage"
          ["Resource"] = "*"
        }
      }
    }
  }
}
