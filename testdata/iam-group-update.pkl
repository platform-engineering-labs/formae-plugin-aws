amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/group.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-group-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM Group"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new group.Group {
    label = "plugin-sdk-test-group"
    groupName = "formae-plugin-sdk-test-group-\(testRunID)"
    path = "/updated/"
  }
}
