amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/route53/hostedzone.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-route53-hostedzone-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for Route53 HostedZone"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new hostedzone.HostedZone {
    label = "plugin-sdk-test-hostedzone"
    name = "sdk-hz-\(testRunID).test-formae.io"
    hostedZoneConfig = new hostedzone.HostedZoneConfig {
      comment = "SDK test hosted zone"
    }
  }
}
