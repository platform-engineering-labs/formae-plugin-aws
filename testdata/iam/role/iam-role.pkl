amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/role.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-role-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM Role"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new role.Role {
    label = "plugin-sdk-test-role"
    roleName = "formae-plugin-sdk-test-role-\(testRunID)"
    assumeRolePolicyDocument {
      ["Version"] = "2012-10-17"
      ["Statement"] {
        new {
          ["Effect"] = "Allow"
          ["Principal"] {
            ["Service"] = "lambda.amazonaws.com"
          }
          ["Action"] = "sts:AssumeRole"
        }
      }
    }
  }
}
