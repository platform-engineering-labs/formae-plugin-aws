amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/transitgateway.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-transitgateway-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 TransitGateway"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Updated: changed description and auto accept setting
  new transitgateway.TransitGateway {
    label = "plugin-sdk-test-tgw"
    description = "Formae SDK test transit gateway - updated"
    dnsSupport = "enable"
    vpnEcmpSupport = "enable"
    autoAcceptSharedAttachments = "enable"
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-tgw-\(testRunID)" }
      new { key = "Environment"; value = "updated" }
    }
  }
}
