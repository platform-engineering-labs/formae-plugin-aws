amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/oidcprovider.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-oidcprovider-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM OIDCProvider"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new oidcprovider.OIDCProvider {
    label = "plugin-sdk-test-oidcprovider"
    url = "https://token.actions.githubusercontent.com/sdk-test-\(testRunID)"
    clientIdList {
      "sts.amazonaws.com"
    }
    thumbprintList {
      "6938fd4d98bab03faadb97b34396831e3780aea1"
    }
  }
}
