amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/role.pkl"
import "@aws/iam/instanceprofile.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-instanceprofile-\(testRunID)"

// Role dependency - InstanceProfile needs a role to reference
local parentRole = new role.Role {
  label = "test-role-for-instanceprofile"
  roleName = "formae-plugin-sdk-test-ip-role-\(testRunID)"
  assumeRolePolicyDocument {
    ["Version"] = "2012-10-17"
    ["Statement"] {
      new {
        ["Effect"] = "Allow"
        ["Principal"] {
          ["Service"] = "ec2.amazonaws.com"
        }
        ["Action"] = "sts:AssumeRole"
      }
    }
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM InstanceProfile"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Role for InstanceProfile
  parentRole

  // InstanceProfile under test
  new instanceprofile.InstanceProfile {
    label = "plugin-sdk-test-instanceprofile"
    instanceProfileName = "formae-plugin-sdk-test-ip-\(testRunID)"
    path = "/"
    roles = new Listing {
      parentRole.res.roleName
    }
  }
}
