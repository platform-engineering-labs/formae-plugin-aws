amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ecs/taskdefinition.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ecs-taskdefinition-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for ECS TaskDefinition"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new taskdefinition.TaskDefinition {
    label = "plugin-sdk-test-taskdef"
    family = "formae-plugin-sdk-test-taskdef-\(testRunID)"
    requiresCompatibilities {
      "FARGATE"
    }
    networkMode = "awsvpc"
    cpu = "256"
    memory = "512"
    containerDefinitions {
      new {
        name = "test-container"
        image = "public.ecr.aws/docker/library/alpine:latest"
        essential = true
      }
    }
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-taskdef-\(testRunID)" }
    }
  }
}
