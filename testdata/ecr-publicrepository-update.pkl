amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ecr/publicrepository.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ecr-publicrepository-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for ECR PublicRepository"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Updated: added tags
  new publicrepository.PublicRepository {
    label = "plugin-sdk-test-publicrepo"
    repositoryName = "formae-plugin-sdk-test-publicrepo-\(testRunID)"
    tags {
      new { key = "Environment"; value = "updated" }
    }
  }
}
