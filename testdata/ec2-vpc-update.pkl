amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/ec2/vpc.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-ec2-vpc-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for EC2 VPC"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  new vpc.VPC {
    label = "plugin-sdk-test-vpc"
    cidrBlock = "10.200.0.0/16"
    enableDnsHostnames = true
    enableDnsSupport = true
    tags {
      new { key = "Name"; value = "formae-plugin-sdk-test-vpc-\(testRunID)" }
      new { key = "Environment"; value = "updated" }
    }
  }
}
