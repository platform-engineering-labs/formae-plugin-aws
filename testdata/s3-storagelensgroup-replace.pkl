amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/s3/storagelensgroup.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-s3-storagelensgroup-\(testRunID)"

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for S3 StorageLensGroup"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // StorageLensGroup with changed name (createOnly field) - triggers replace
  new storagelensgroup.StorageLensGroup {
    label = "plugin-sdk-test-storagelensgroup"
    name = "formae-sdk-test-slg-r-\(testRunID)"
    filter = new storagelensgroup.Filter {
      matchAnyPrefix = new Listing {
        "logs/"
        "data/"
        "archive/"
      }
      matchObjectSize = new storagelensgroup.MatchObjectSize {
        bytesGreaterThan = 1024
      }
    }
  }
}
