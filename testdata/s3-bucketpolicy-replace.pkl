amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/s3/bucket.pkl"
import "@aws/s3/bucketpolicy.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-s3-bucketpolicy-\(testRunID)"

// Original bucket - must remain in the forma so it is not destroyed
local testBucket = new bucket.Bucket {
  label = "test-bucket"
  bucketName = "formae-plugin-sdk-test-bp-\(testRunID)"
  publicAccessBlockConfiguration = new bucket.PublicAccessBlockConfiguration {
    blockPublicAcls = true
    blockPublicPolicy = false
    ignorePublicAcls = true
    restrictPublicBuckets = false
  }
}

// Second bucket - the policy will be moved to this bucket (triggers replace)
local testBucket2 = new bucket.Bucket {
  label = "test-bucket-2"
  bucketName = "formae-plugin-sdk-test-bp-2-\(testRunID)"
  publicAccessBlockConfiguration = new bucket.PublicAccessBlockConfiguration {
    blockPublicAcls = true
    blockPublicPolicy = false
    ignorePublicAcls = true
    restrictPublicBuckets = false
  }
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for S3 BucketPolicy"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Both buckets must be present
  testBucket
  testBucket2

  // BucketPolicy with changed bucket (createOnly field) - triggers replace
  new bucketpolicy.BucketPolicy {
    label = "plugin-sdk-test-bucketpolicy"
    bucket = testBucket2.res.bucketName
    policyDocument {
      ["Version"] = "2012-10-17"
      ["Statement"] {
        new {
          ["Effect"] = "Allow"
          ["Principal"] {
            ["Service"] = "logging.s3.amazonaws.com"
          }
          ["Action"] {
            "s3:PutObject"
            "s3:GetBucketLocation"
          }
          ["Resource"] = "arn:aws:s3:::formae-plugin-sdk-test-bp-2-\(testRunID)/*"
        }
      }
    }
  }
}
