amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/s3/bucket.pkl"
import "@aws/s3/bucketpolicy.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-s3-bucketpolicy-\(testRunID)"

// Bucket dependency - same as create
local testBucket = new bucket.Bucket {
  label = "test-bucket"
  bucketName = "formae-plugin-sdk-test-bp-\(testRunID)"
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for S3 BucketPolicy"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Bucket required for BucketPolicy
  testBucket

  // BucketPolicy with updated policyDocument - added s3:PutObject action
  new bucketpolicy.BucketPolicy {
    label = "plugin-sdk-test-bucketpolicy"
    bucket = testBucket.res.bucketName
    policyDocument {
      ["Version"] = "2012-10-17"
      ["Statement"] {
        new {
          ["Effect"] = "Allow"
          ["Principal"] = "*"
          ["Action"] {
            "s3:GetObject"
            "s3:PutObject"
          }
          ["Resource"] = "arn:aws:s3:::formae-plugin-sdk-test-bp-\(testRunID)/*"
        }
      }
    }
  }
}
