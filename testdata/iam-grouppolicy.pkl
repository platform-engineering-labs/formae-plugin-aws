amends "@formae/forma.pkl"
import "@formae/formae.pkl"

import "@aws/aws.pkl"

import "@aws/iam/group.pkl"
import "@aws/iam/grouppolicy.pkl"

local testRunID = read("env:FORMAE_TEST_RUN_ID")
local stackName = "plugin-sdk-test-iam-grouppolicy-\(testRunID)"

// Group dependency - GroupPolicy needs a group to attach to
local parentGroup = new group.Group {
  label = "test-group-for-grouppolicy"
  groupName = "formae-plugin-sdk-test-gp-group-\(testRunID)"
  path = "/"
}

forma {
  new formae.Stack {
    label = stackName
    description = "Plugin SDK test for IAM GroupPolicy"
  }

  new formae.Target {
    label = "aws-target"
    config = new aws.Config {
      region = "us-east-1"
    }
  }

  // Parent Group
  parentGroup

  // GroupPolicy under test
  new grouppolicy.GroupPolicy {
    label = "plugin-sdk-test-grouppolicy"
    groupName = "formae-plugin-sdk-test-gp-group-\(testRunID)"
    policyName = "formae-plugin-sdk-test-grouppolicy-\(testRunID)"
    policyDocument {
      ["Version"] = "2012-10-17"
      ["Statement"] {
        new {
          ["Effect"] = "Allow"
          ["Action"] = "logs:DescribeLogGroups"
          ["Resource"] = "*"
        }
      }
    }
  }
}
