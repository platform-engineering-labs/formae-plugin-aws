module aws.ec2.networkinsightspath

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::EC2::NetworkInsightsPath"

@aws.SubResourceHint
open class PortRange extends formae.SubResource {
    fromPort: Int?
    toPort: Int?
}

@aws.SubResourceHint
open class PathFilter extends formae.SubResource {
    destinationAddress: String?
    destinationPortRange: PortRange?
    sourceAddress: String?
    sourcePortRange: PortRange?
}

@aws.ResourceHint {
    type = module.type
    identifier = "NetworkInsightsPathId"
}
open class NetworkInsightsPath extends formae.Resource {

    @aws.FieldHint{createOnly = true}
    destination: String?

    @aws.FieldHint{createOnly = true}
    destinationIp: String?

    @aws.FieldHint{createOnly = true}
    destinationPort: Int?

    @aws.FieldHint{createOnly = true}
    filterAtDestination: PathFilter?

    @aws.FieldHint{createOnly = true}
    filterAtSource: PathFilter?

    @aws.FieldHint{createOnly = true}
    protocol: String

    @aws.FieldHint{createOnly = true}
    source: String

    @aws.FieldHint{createOnly = true}
    sourceIp: String?

    @aws.FieldHint {
        updateMethod = "EntitySet"
        indexField = "Key"
    }
    tags: Listing<aws.Tag>?
}
