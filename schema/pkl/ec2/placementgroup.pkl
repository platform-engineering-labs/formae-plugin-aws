module aws.ec2.placementgroup

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::EC2::PlacementGroup"

@aws.ResourceHint {
    type = module.type
    identifier = "GroupName"
}
open class PlacementGroup extends formae.Resource {

    @aws.FieldHint{createOnly = true}
    partitionCount: Int?

    @aws.FieldHint{createOnly = true}
    spreadLevel: String?

    @aws.FieldHint{createOnly = true}
    strategy: String?

    @aws.FieldHint {
        createOnly = true
        updateMethod = "EntitySet"
        indexField = "Key"
    }
    tags: Listing<aws.Tag>?
}
