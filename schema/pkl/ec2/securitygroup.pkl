module aws.ec2.securitygroup

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::EC2::SecurityGroup"

open class SecurityGroupResolvable extends formae.Resolvable {
    hidden type = module.type

    hidden id: SecurityGroupResolvable = (this) {
        property = "GroupId"
    }
    hidden groupId: SecurityGroupResolvable = (this) {
        property = "GroupId"
    }
    hidden vpcId: SecurityGroupResolvable = (this) {
        property = "VpcId"
    }
    hidden groupName: SecurityGroupResolvable = (this) {
        property = "GroupName"
    }
    hidden ownerId: SecurityGroupResolvable = (this) {
        property = "OwnerId"
    }
}

@aws.ResourceHint {
    type = module.type
    identifier = "GroupId"
}
open class SecurityGroup extends formae.Resource {

    @aws.FieldHint{createOnly = true}
    groupDescription: String

    @aws.FieldHint{createOnly = true}
    groupName: String?

    @aws.FieldHint {
        updateMethod = "EntitySet"
        indexField = "Key"
    }
    tags: Listing<aws.Tag>?

    @aws.FieldHint{createOnly = true}
    vpcId: (String|formae.Resolvable)?

    hidden parent = this

    hidden res: SecurityGroupResolvable = new {
        label = parent.label
        stack = parent.stack?.label
    }
}