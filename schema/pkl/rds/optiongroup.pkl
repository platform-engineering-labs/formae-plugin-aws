module aws.rds.optiongroup

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::RDS::OptionGroup"

@aws.SubResourceHint
open class OptionConfiguration extends formae.SubResource {
    @aws.FieldHint{
        outputField = "DBSecurityGroupMemberships"
    }
    dbSecurityGroupMemberships: Listing<String>?

    optionName: String
    optionSettings: Listing<OptionSetting>?
    optionVersion: String?
    port: Int?
    vpcSecurityGroupMemberships: Listing<String>?
}


@aws.SubResourceHint
open class OptionSetting extends formae.SubResource {
    name: String?
    value: String?
}
@aws.ResourceHint {
    type = module.type
    identifier = "OptionGroupName"
}
open class OptionGroup extends formae.Resource {

    @aws.FieldHint{createOnly = true}
    engineName: String

    @aws.FieldHint{createOnly = true}
    majorEngineVersion: String

    @aws.FieldHint
    optionConfigurations: Listing<OptionConfiguration>?

    @aws.FieldHint{createOnly = true}
    optionGroupDescription: String

    @aws.FieldHint{createOnly = true}
    optionGroupName: String?

    @aws.FieldHint {
        updateMethod = "EntitySet"
        indexField = "Key"
    }
    tags: Listing<aws.Tag>?
}
