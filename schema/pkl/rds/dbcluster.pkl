module aws.rds.dbcluster

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::RDS::DBCluster"

@aws.SubResourceHint
open class Role extends formae.SubResource {
    featureName: String?
    roleArn: String|formae.Resolvable
}

@aws.SubResourceHint
open class MasterUserSecret extends formae.SubResource {
    kmsKeyId: String?
    secretArn: (String|formae.Resolvable)?
}

@aws.SubResourceHint
open class ReadEndpoint extends formae.SubResource {
    address: String?
}

@aws.SubResourceHint
open class ScalingConfiguration extends formae.SubResource {
    autoPause: Boolean?
    maxCapacity: Int?
    minCapacity: Int?
    secondsBeforeTimeout: Int?
    secondsUntilAutoPause: Int?
