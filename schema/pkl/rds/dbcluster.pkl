    hidden endpointAddress: DBClusterResolvable = (this) {
        property = "Endpoint.Address"
    }
    hidden endpointPort: DBClusterResolvable = (this) {
        property = "Endpoint.Port"
    }
    hidden masterUserSecretSecretArn: DBClusterResolvable = (this) {
        property = "MasterUserSecret.SecretArn"
    }
    hidden readEndpointAddress: DBClusterResolvable = (this) {
        property = "ReadEndpoint.Address"
    }
    hidden storageThroughput: DBClusterResolvable = (this) {
        property = "StorageThroughput"
    }
}

