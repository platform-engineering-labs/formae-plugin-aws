module aws.iam.samlprovider

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::IAM::SAMLProvider"

@aws.ResourceHint {
    type = module.type
    identifier = "Arn"
}
open class SAMLProvider extends formae.Resource {

    @aws.FieldHint{createOnly = true}
    name: String(matches(Regex(#"[\w._-]+"#)))?

    @aws.FieldHint
    samlMetadataDocument: String

    @aws.FieldHint {
        updateMethod = "EntitySet"
        indexField = "Key"
    }
    tags: Listing<aws.Tag>?
}
