module aws.iam.rolepolicy

import "@formae/formae.pkl"
import "../aws.pkl"

const type = "AWS::IAM::RolePolicy"

@aws.ResourceHint {
    type = module.type
    identifier = "PolicyName"
    parent = "AWS::IAM::Role"
    listParam = new formae.ListProperty {
        parentProperty = "RoleName"
        listParameter = "RoleName"
    }
    discoverable = true
}
open class RolePolicy extends formae.Resource {

    @aws.FieldHint
    policyDocument: Dynamic?

    @aws.FieldHint{createOnly = true}
    policyName: String

    @aws.FieldHint{createOnly = true}
    roleName: String|formae.Resolvable

}
